<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-order-items-table" author="developer">
        <createTable tableName="product_order" schemaName="store">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Создание внешних ключей -->
        <addForeignKeyConstraint
            baseTableName="product_order"
            baseColumnNames="product_id"
            baseTableSchemaName="store"
            constraintName="fk_product_order_product"
            referencedTableName="product"
            referencedColumnNames="id"
            referencedTableSchemaName="store"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableName="product_order"
            baseColumnNames="order_id"
            baseTableSchemaName="store"
            constraintName="fk_product_order_order"
            referencedTableName="order"
            referencedColumnNames="id"
            referencedTableSchemaName="store"
            onDelete="CASCADE"/>

        <!-- Создание индексов -->
        <createIndex indexName="idx_product_order_product_id" tableName="product_order" schemaName="store">
            <column name="product_id"/>
        </createIndex>

        <createIndex indexName="idx_product_order_order_id" tableName="product_order" schemaName="store">
            <column name="order_id"/>
        </createIndex>

        <!-- Уникальный индекс для предотвращения дублирования -->
        <createIndex indexName="idx_product_order_unique" tableName="product_order" schemaName="store" unique="true">
            <column name="product_id"/>
            <column name="order_id"/>
        </createIndex>

        <!-- Добавление ограничений -->
        <sql>
            ALTER TABLE store.product_order ADD CONSTRAINT check_product_order_count
            CHECK (count > 0);
        </sql>
    </changeSet>

</databaseChangeLog>
