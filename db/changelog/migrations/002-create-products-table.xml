<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-products-table" author="developer">
        <createTable tableName="product" schemaName="store">
            <column name="id" type="SERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Создание индексов -->
        <createIndex indexName="idx_product_name" tableName="product" schemaName="store">
            <column name="name"/>
        </createIndex>

        <createIndex indexName="idx_product_price" tableName="product" schemaName="store">
            <column name="price"/>
        </createIndex>

        <!-- Добавление ограничений -->
        <sql>
            ALTER TABLE store.product ADD CONSTRAINT check_product_price
            CHECK (price >= 0);

            ALTER TABLE store.product ADD CONSTRAINT check_product_count
            CHECK (count >= 0);
        </sql>
    </changeSet>

</databaseChangeLog>
